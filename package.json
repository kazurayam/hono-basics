{
  "name": "hono-basics",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test:rpcserver": "bun test --cwd ./packages/rpcserver",
    "test:rpcclient": "bun test --cwd ./packages/rpcclient",
    "test:testclient": "bun test --cwd ./packages/testclient",
    "test:testing": "bun test --cwd ./packages/testing",
    "test:html": "bun test --cwd ./packages/html",
    "test:routing": "bun test --cwd  ./packages/routing",
    "docs": "cd docs; ./adoc2md.sh -t; cd ~",
    "rpcserver": "bun --cwd ./packages/rpcserver --watch ./src/server.ts",
    "rpcclient": "bun --cwd ./packages/rpcclient --watch ./src/client.ts",
    "htmlserver": "bun --cwd ./packages/html --watch ./src/index.ts",
    "jsxserver": "bun --cwd ./packages/jsx --hot ./src/index.tsx",
    "jsxhtmlserver": "bun --cwd ./packages/jsx-html --hot ./src/index.tsx",
    "jsxrendererserver": "bun --cwd ./packages/jsx-renderer --hot ./src/index.tsx",
    "routingserver": "bun --cwd ./packages/routing --hot ./src/index.tsx"
},
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
